

<% @accessories.each do |accessory| %>

    <% image = accessory.image%>
    <h1><%= link_to image_tag(image, alt: "accessory_img", style: 'width: 350px; height: auto;'), accessory_path(accessory_name: accessory.name) %></h1>
    <p><%= accessory.description %> - <%= accessory.price %></p>
    <%= button_to "Cart", cart_items_path(product_id: accessory.product_id), method: :post, class: 'btn btn-success' %>

<% end %>


