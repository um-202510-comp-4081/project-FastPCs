<h1>Ready-To-Ship PCs</h1>
<p>Choose from a premium selection of prebuilt PCs ready to ship to your house</p>

<label for="sort-by">Sort by:</label>
<select id="sort-by">
  <option value="">Default</option>
  <option value="price-asc">Price: Low to High</option>
  <option value="price-desc">Price: High to Low</option>
  <option value="name-asc">Name: A-Z</option>
  <option value="name-desc">Name: Z-A</option>
  <option value="ram-asc">RAM: Low to High</option>
  <option value="ram-desc">RAM: High to Low</option>
</select>

<!-- Page-specific CSS -->
<style>
  .image-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    max-width: 1000px;
    margin: 20px auto;
  }

  .image-grid a {
    aspect-ratio: 1 / 1;
    display: block;
    overflow: hidden;
  }

  .image-grid img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .image-grid img:hover {
    transform: scale(1.05);
  }
</style>

<!-- Link to pc show pages -->
<div class="image-grid">
<% @readypcs.each do |readypc| %>
  <div class="pc-item" 
       data-name="<%= readypc.name %>" 
       data-price="<%= readypc.price %>" 
       data-brand="<%= readypc.brand %>" 
       data-ram="<%= readypc.ram %>">
    <%= link_to image_tag('placeholderlaptop.jpg', alt: "PC Image"), readytoships_path(readypc) %>
    <p class="pc-name"><%= readypc.name %></p>
    <p class="pc-price">$<%= readypc.price %></p>
    <p class="pc-brand"><%= readypc.brand %></p>
    <p class="pc-ram"><%= readypc.ram %> GB RAM</p>
    <%= button_to "Cart", cart_items_path(product_id: readypc.product.id), method: :post, class: 'btn btn-success' %>
  </div>
<% end %>
</div>

<%= link_to "Back to Home", home_path %>