<h2>
  <%= params[:category].present? ? "#{params[:category].titleize} Accessories" : "Feature Accessories" %>
</h2>

<div class="feature-accessory-container">
  <% accessories.each do |accessory| %>
    <div class="feature-accessory">
      <%= link_to image_tag(accessory.image, alt: "Feature Image"), accessory_path(accessory_name: accessory.name), data: { turbo: false } %>
      <p><%= accessory.description %></p>
      <h3>
        $<%= accessory.price %>
        <%= button_to cart_items_path(product_id: accessory.product_id), method: :post, class: "cart-button", data: { turbo: false } do %>
          <i class="fas fa-shopping-cart"></i>
        <% end %>
      </h3>
    </div>
  <% end %>
</div>
